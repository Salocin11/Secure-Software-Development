@model Philip.Pages.Audit.IndexModel

@{
    ViewData["Title"] = "Audit Logs";
}

<h1>Audit Logs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Audit Action: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].AuditActionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].DateTimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].KeyPostFieldID)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].OldValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].NewValue)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuditRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuditActionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeyPostFieldID)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.OldValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewValue)
            </td>*@
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Audit_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Audit_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Audit_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
