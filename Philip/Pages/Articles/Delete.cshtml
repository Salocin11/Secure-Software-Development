@page "{id:int}"
@model Philip.Pages.Articles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<p class="text-danger">@Model.ConcurrencyErrorMessage</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Content)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Article.RowVersion[7])
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Article.ID" />
        <input type="hidden" asp-for="Article.RowVersion" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
